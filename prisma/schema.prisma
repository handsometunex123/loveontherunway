generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  DESIGNER
  CUSTOMER
}

enum OrderStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
}

enum ProductCategory {
  MALE
  FEMALE
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String     @unique
  emailVerified DateTime?
  image         String?
  password      String
  phone         String     @default("")
  role          Role       @default(CUSTOMER)
  isActive      Boolean    @default(true)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  designerProfile DesignerProfile?
  orders          Order[]
  votes           Vote[]
  accounts        Account[]
  sessions        Session[]
  invitesSent     DesignerInvite[]

  @@index([role])
}

model DesignerProfile {
  id         String   @id @default(cuid())
  userId     String   @unique
  brandName  String
  bio        String?
  brandLogo  String?
  website    String?
  instagram  String?
  twitter    String?
  tiktok     String?
  isApproved Boolean  @default(false)
  isVisible  Boolean  @default(true)
  isDeleted  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  products   Product[]
  orderItems OrderItem[]

  @@index([isApproved, isVisible])
}

model DesignerInvite {
  id         String   @id @default(cuid())
  email      String
  tokenHash  String   @unique
  expiresAt  DateTime
  usedAt     DateTime?
  createdAt  DateTime @default(now())
  createdBy  String

  createdByUser User @relation(fields: [createdBy], references: [id], onDelete: Cascade)

  @@index([email])
  @@index([expiresAt])
}

model Product {
  id          String   @id @default(cuid())
  designerId  String
  name        String
  description String?
  price       Decimal  @default(0.00)
  category    ProductCategory
  isVisible   Boolean  @default(true)
  isDeleted   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  designer  DesignerProfile @relation(fields: [designerId], references: [id], onDelete: Cascade)
  images    ProductImage[]
  variants  ProductVariant[]
  orderItems OrderItem[]
  votes     Vote[]

  @@index([designerId])
  @@index([isVisible])
  @@index([isDeleted])
}

model ProductImage {
  id        String   @id @default(cuid())
  productId String
  publicId  String
  url       String
  createdAt DateTime @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
}

model ProductVariant {
  id           String   @id @default(cuid())
  productId    String
  size         String
  color        String
  measurements Json
  stock        Int?
  createdAt    DateTime @default(now())

  product    Product     @relation(fields: [productId], references: [id], onDelete: Cascade)
  orderItems OrderItem[]

  @@index([productId])
}

model Order {
  id               String      @id @default(cuid())
  customerId       String
  status           OrderStatus @default(PENDING)
  paymentReference String?
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  customer User        @relation(fields: [customerId], references: [id], onDelete: Cascade)
  items    OrderItem[]

  @@index([customerId])
  @@index([status])
}

model OrderItem {
  id         String  @id @default(cuid())
  orderId    String
  productId  String
  variantId  String?
  designerId String
  quantity   Int     @default(1)

  order   Order          @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product        @relation(fields: [productId], references: [id], onDelete: Restrict)
  variant ProductVariant? @relation(fields: [variantId], references: [id], onDelete: SetNull)
  designer DesignerProfile @relation(fields: [designerId], references: [id], onDelete: Restrict)

  @@index([orderId])
  @@index([productId])
  @@index([designerId])
}

model Vote {
  id        String   @id @default(cuid())
  userId    String
  productId String
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
  @@index([productId])
}

model PlatformSetting {
  id            String   @id @default(cuid())
  votingEnabled Boolean  @default(false)
  eventPhase    String   @default("BEFORE_SHOW")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model GalleryImage {
  id        String   @id @default(cuid())
  publicId  String
  url       String
  title     String?
  eventName String   @default("Past Event")
  order     Int      @default(0)
  isVisible Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isVisible])
  @@index([eventName])
  @@index([order])
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
